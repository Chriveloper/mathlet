<script is:inline>
  // Immediately invoked function to avoid global scope pollution
  (function() {
    console.log("ğŸ” Theme detection script starting...");
    
    // Check if system prefers dark mode
    const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)');
    console.log(`ğŸ–¥ï¸ System preference detected: ${systemPrefersDark.matches ? 'dark' : 'light'}`);
    
    // Check for stored preference
    const storedTheme = localStorage.getItem('theme');
    console.log(`ğŸ’¾ Stored preference: ${storedTheme || 'none'}`);
    
    // Determine which theme to use
    let initialTheme;
    if (storedTheme === 'dark' || storedTheme === 'light') {
      console.log(`ğŸ”’ Using stored preference: ${storedTheme}`);
      initialTheme = storedTheme === 'dark';
    } else {
      console.log(`ğŸ”„ Using system preference: ${systemPrefersDark.matches ? 'dark' : 'light'}`);
      initialTheme = systemPrefersDark.matches;
    }
    
    // Apply theme immediately to prevent flash
    console.log(`ğŸ¨ Setting initial theme: ${initialTheme ? 'dark' : 'light'}`);
    document.documentElement.classList.toggle('dark', initialTheme);
    
    // Define toggle function
    window.toggleTheme = function() {
      const currentIsDark = document.documentElement.classList.contains('dark');
      const newIsDark = !currentIsDark;
      console.log(`ğŸ”„ Toggling theme from ${currentIsDark ? 'dark' : 'light'} to ${newIsDark ? 'dark' : 'light'}`);
      
      // Apply new theme
      document.documentElement.classList.toggle('dark', newIsDark);
      
      // Save to localStorage
      localStorage.setItem('theme', newIsDark ? 'dark' : 'light');
      console.log(`ğŸ’¾ Theme saved to localStorage: ${newIsDark ? 'dark' : 'light'}`);
      
      // Dispatch custom event
      document.dispatchEvent(new CustomEvent('themeChanged', { 
        detail: { isDark: newIsDark } 
      }));
    };
    
    // System preference change handler
    systemPrefersDark.addEventListener('change', (e) => {
      const newPreference = e.matches ? 'dark' : 'light';
      console.log(`ğŸ–¥ï¸ System preference changed to: ${newPreference}`);
      
      // Only follow system if user hasn't set preference
      if (!localStorage.getItem('theme')) {
        console.log(`ğŸ”„ Following system change to: ${newPreference}`);
        document.documentElement.classList.toggle('dark', e.matches);
      } else {
        console.log(`ğŸ”’ Ignoring system change, user preference exists`);
      }
    });
    
    // For testing - log theme info
    console.log(`ğŸ“Š Final initialization state:
    - Document has 'dark' class: ${document.documentElement.classList.contains('dark')}
    - localStorage theme value: ${localStorage.getItem('theme')}
    - System prefers dark: ${systemPrefersDark.matches}
    `);
  })();
</script>